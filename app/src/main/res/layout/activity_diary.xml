<?xml version="1.0" encoding="utf-8"?>
<king.rapper.pgone.pgonediary.view.sideslip.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_layout_title_bar_right" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayd"
        android:focusableInTouchMode="true" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/AppPrimary">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparentDate"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/action_undo"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/undo" />

                            <ImageButton
                                android:id="@+id/action_redo"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/redo" />

                            <ImageButton
                                android:id="@+id/action_bold"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/bold" />

                            <ImageButton
                                android:id="@+id/action_italic"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/italic" />

                            <ImageButton
                                android:id="@+id/action_subscript"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/subscript" />

                            <ImageButton
                                android:id="@+id/action_superscript"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/superscript" />

                            <ImageButton
                                android:id="@+id/action_strikethrough"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/strikethrough" />

                            <ImageButton
                                android:id="@+id/action_underline"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/underline" />

                            <ImageButton
                                android:id="@+id/action_heading1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/h1" />

                            <ImageButton
                                android:id="@+id/action_heading2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/h2" />

                            <ImageButton
                                android:id="@+id/action_heading3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/h3" />

                            <ImageButton
                                android:id="@+id/action_heading4"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/h4" />

                            <ImageButton
                                android:id="@+id/action_heading5"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/h5" />

                            <ImageButton
                                android:id="@+id/action_heading6"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/h6" />


                            <ImageButton
                                android:id="@+id/action_txt_color"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:padding="14dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_font_color" />

                            <ImageButton
                                android:id="@+id/action_bg_color"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/ic_font_background" />


                            <ImageButton
                                android:id="@+id/action_indent"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/indent" />

                            <ImageButton
                                android:id="@+id/action_outdent"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/outdent" />

                            <ImageButton
                                android:id="@+id/action_align_left"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/justify_left" />

                            <ImageButton
                                android:id="@+id/action_align_center"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/justify_center" />

                            <ImageButton
                                android:id="@+id/action_align_right"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/justify_right" />

                            <ImageButton
                                android:id="@+id/action_insert_bullets"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/bullets" />

                            <ImageButton
                                android:id="@+id/action_insert_numbers"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/numbers" />

                            <ImageButton
                                android:id="@+id/action_blockquote"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/blockquote"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/action_insert_image"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/insert_image"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/action_insert_link"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@mipmap/insert_link" />

                            <ImageButton
                                android:id="@+id/action_insert_checkbox"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:src="@android:drawable/checkbox_on_background"
                                android:visibility="gone" />

                        </LinearLayout>
                    </HorizontalScrollView>
                </FrameLayout>

                <!--日记顶部-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tv_header_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日"
                        android:textColor="@color/AppPrimary"
                        android:textSize="28sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_header_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年月"
                            android:textColor="@color/AppPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_header_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="星期"
                            android:textColor="@color/AppPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!--心情-->
                    <ImageView
                        android:id="@+id/iv_header_mood"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:padding="7dp"
                        android:src="@mipmap/ic_test" />

                    <!--天气   https://cdn.qhdyzb.cn/android/36.png   (0-36)-->
                    <ImageView
                        android:id="@+id/iv_header_weather"
                        android:layout_width="44dp"
                        android:layout_height="37dp"
                        android:padding="7dp"
                        android:src="@mipmap/weather0" />
                </LinearLayout>

                <!--日记-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_test" />

                    <LinearLayout
                        android:id="@+id/ll_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparentDate"
                        android:orientation="vertical">


                        <!--标题-->
                        <EditText
                            android:id="@+id/et_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparentDate"
                            android:hint="标题"
                            android:lines="1"
                            android:maxLength="30"
                            android:paddingBottom="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="7dp"
                            android:textColor="@color/AppPrimary"
                            android:textColorHint="@color/AppPrimary"
                            android:textSize="15sp" />

                        <ScrollView
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!--正文-->
                                <!--语音-->
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_voice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:visibility="gone" />
                                <!--文本编辑-->
                                <king.rapper.pgone.pgonediary.view.MyRichEditor
                                    android:id="@+id/editor"
                                    android:minHeight="800dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparent" />
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <!--日记底部-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--表情图标-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--表情-->
                    <ImageView
                        android:id="@+id/iv_expression"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@mipmap/ic_expression" />

                    <!--图片-->
                    <ImageView
                        android:id="@+id/iv_picture"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:padding="7dp"
                        android:src="@mipmap/ic_picture" />

                    <!--背景图片-->
                    <ImageView
                        android:id="@+id/iv_background"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@mipmap/ic_test" />

                    <!--语音-->
                    <ImageView
                        android:id="@+id/iv_voice"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@mipmap/ic_recording" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</king.rapper.pgone.pgonediary.view.sideslip.MyLinearLayout>